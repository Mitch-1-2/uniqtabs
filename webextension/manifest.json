{
  "default_locale": "en",
  "manifest_version": 3,
  "author": "Mitchell Field",
  "description": "__MSG_extension_description__",
  "name": "uniqtabs (Unique Tabs)",
  "short_name": "uniqtabs",
  "version": "1.0.5",

  "browser_specific_settings": {
    "gecko": {
      "id": "uniqtabs@mitchellfield.id.au"
    }
  },

  "background": {
    "scripts": ["background.js"],
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_title": "__MSG_browser_action_default_label__"
  },

  "commands": {
    "_execute_action": {
      "description": "__MSG_browser_action_default_label__",
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      }
    }
  },

  "icons": {
    "16": "images/icon-016.png",
    "24": "images/icon-024.png",
    "32": "images/icon-032.png",
    "48": "images/icon-048.png",
    "64": "images/icon-064.png",
    "96": "images/icon-096.png",
    "128": "images/icon-128.png"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "permissions": [
    "contextualIdentities",
    "cookies",
    "storage",
    "tabs"
  ]
}
