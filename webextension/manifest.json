{
  "default_locale": "en",
  "manifest_version": 2,
  "name": "uniqtabs",
  "version": "0.30.1",

  "applications": {
    "gecko": {
      "id": "uniqtabs@mitchellfield.id.au"
    }
  },

  "permissions": [
    "storage",
    "tabs"
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_action": {
    "browser_style": true,
    "default_title": "Sort tabs"
  },

  "commands": {
    "_execute_browser_action": {
      "description": "Sort and/or deduplicate tabs",
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      }
    }
  },

  "options_ui": {
    "browser_style": true,
    "page": "options.html",
    "open_in_tab": false
  }
}
